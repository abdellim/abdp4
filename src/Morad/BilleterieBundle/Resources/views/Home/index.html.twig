            <div class="row">
              <div class="col-md-6"><a class="navbar-brand" href="#">Billeterie du Louvre</a></div>
              <div class="col-md-6"><img src="http://localhost/p4/web/logo-louvre.png" alt="good vybes" /></div>
            </div>
          </div>
        </div>

      </div><!-- /.container-fluid -->
    </nav>
    <div class="container-fluid">
      <div class="col-md-6">
        <div class="jumbotron" style="background-color: #e6ffff; opacity: 0.85">
          {% block tarif %}
          {% endblock %}
        </div>
      </div>
      <div class="col-md-6" style="opacity: 0.85">
        <div class="jumbotron">
          {% block titre %}
          {% endblock %}
          {{ include("MoradBilleterieBundle:Home:form.html.twig") }}
